<%- contentFor('title') %>
Login

<%- contentFor('stylesheets') %>
<style>
  .custom-label{
    text-align: right;
  }
</style>

<%- contentFor('content') %>
<div class="card card-outline-primary">
  <div class="card-header bg-primary card-inverse">
    Login
  </div>
  <div class="card-block">
    <form action="/login" method="post" class="form-horizontal">
      <div class="form-group row">
        <label for="email" class="form-control-label col-md-4 custom-label">Email:</label>
        <div class="col-md-8">
          <input type="email" name="email" class="form-control" placeholder="someone@domain.com" />
        </div>
      </div>
      <div class="form-group row">
        <label for="password" class="form-control-label col-md-4 custom-label">Password:</label>
        <div class="col-md-8">
          <input type="password" name="password" class="form-control" placeholder="Secret Password" />
        </div>
      </div>
      <div class="col-md-4 offset-md-4">
        <input type="submit" value="Sign Up" class="form-control btn btn-primary" />
      </div>
    </form>
  </div>
</div>
